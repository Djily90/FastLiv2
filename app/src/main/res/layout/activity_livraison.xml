<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayoutLivraison"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#162471"
    android:padding="2dp"
    tools:context=".ui.Chauffeur">

    <ImageView
        android:id="@+id/btn_deconnecter_chauffeur"
        android:layout_width="18dp"
        android:layout_height="25dp"
        android:layout_marginStart="6dp"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="24dp"
        android:contentDescription="@string/btnLogOut"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logout" />

    <TextView
        android:id="@+id/titre_assignerChauffeur"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_marginStart="124dp"
        android:layout_marginTop="24dp"
        android:text="@string/chauffeur"
        android:textAlignment="center"
        android:drawableLeft="@android:drawable/ic_dialog_info"
        android:drawablePadding="6sp"
        android:drawableTint="@color/white"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/btn_deconnecter_chauffeur"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <org.osmdroid.views.MapView
        android:id="@+id/mapView"
        android:layout_width="367dp"
        android:layout_height="244dp"
        android:layout_marginTop="56dp"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintTop_toBottomOf="@+id/revChauffeur"
        tools:layout_editor_absoluteX="22dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/revChauffeur"
        android:layout_width="380dp"
        android:layout_height="336dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="58dp"
        android:background="#162471"
        android:padding="2dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_deconnecter_chauffeur"
        app:layout_constraintTop_toTopOf="parent" />




</androidx.constraintlayout.widget.ConstraintLayout>